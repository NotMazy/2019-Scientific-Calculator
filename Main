<script>

const display = document.getElementById('display');
const historyDiv = document.getElementById('history');
let history = [];

// Theme Toggle

function toggleTheme() {
  const body = document.body;
  if (body.dataset.theme === 'dark') {
    body.dataset.theme = 'light';
  } else {
    body.dataset.theme = 'dark';
  }
}

//Display Handlers
function appendToDisplay(value) {
  if (display.innerText === '0' && value !== '.' && value !== 'Math.') {
    display.innerText = value;
  } else {
    display.innerText += value;
  }
}

function clearDisplay() {
  display.innerText = '0';
}

function deleteLast() {
  if (display.innerText.length <= 1) {
    display.innerText = '0';
  } else {
    display.innerText = display.innerText.slice(0, -1);
  }
}

// Simple Expression Evaluator (no eval) 

function safeEvaluate(expr) {
  try {
    // Replace math functions & œÄ
    expr = expr.replace(/œÄ/g, Math.PI);
    expr = expr.replace(/Math\.sin\(/g, 'sin(');
    expr = expr.replace(/Math\.cos\(/g, 'cos(');
    expr = expr.replace(/Math\.tan\(/g, 'tan(');
    expr = expr.replace(/Math\.log\(/g, 'log(');
    expr = expr.replace(/Math\.sqrt\(/g, 'sqrt(');

    // Tokenize
    const tokens = tokenize(expr);
    // Infix = Postfix (RPN)
    const rpn = infixToPostfix(tokens);
    // Evaluate RPN
    const result = evaluateRPN(rpn);

    return Number.isInteger(result) ? result : Number(result.toFixed(8));
  } catch (e) {
    return 'Error';
  }
}

// Tokenize input string
function tokenize(expr) {
  const tokens = [];
  let num = '';
  for (let i = 0; i < expr.length; i++) {
    const ch = expr[i];
    if (/\s/.test(ch)) continue;

    if (/[0-9.]/.test(ch)) {
      num += ch;
    } else {
      if (num) {
        tokens.push(num);
        num = '';
      }

      if (ch === '-' && (i === 0 || '+-*/^('.includes(expr[i-1]))) {
        tokens.push('0'); // unary minus ‚Üí 0 -
        tokens.push('-');
      } else if ('+-*/^()'.includes(ch)) {
        tokens.push(ch);
      } else {
        throw new Error('Invalid char');
      }
    }
  }
  if (num) tokens.push(num);
  return tokens;
}

// Shunting_yard algorithm = RPN
function infixToPostfix(tokens) {
  const output = [];
  const opStack = [];
  const precedence = { '+':1, '-':1, '*':2, '/':2, '^':3 };
  const assoc = { '^':'right' };

  for (const token of tokens) {
    if (!isNaN(parseFloat(token))) {
      output.push(token);
    } else if (token === '(') {
      opStack.push(token);
    } else if (token === ')') {
      while (opStack.length && opStack[opStack.length-1] !== '(') {
        output.push(opStack.pop());
      }
      opStack.pop(); // discard '('
    } else { // operator
      while (opStack.length && opStack[opStack.length-1] !== '(' &&
             (precedence[opStack[opStack.length-1]] > precedence[token] ||
              (precedence[opStack[opStack.length-1]] === precedence[token] && assoc[token] !== 'right'))) {
        output.push(opStack.pop());
      }
      opStack.push(token);
    }
  }

  while (opStack.length) {
    output.push(opStack.pop());
  }
  return output;
}

// Evaluate Reverse Polish Notation
function evaluateRPN(rpn) {
  const stack = [];

  for (const token of rpn) {
    if (!isNaN(parseFloat(token))) {
      stack.push(parseFloat(token));
    } else {
      let b = stack.pop();
      let a = stack.pop() ?? 0;

      switch (token) {
        case '+':  stack.push(a + b); break;
        case '-':  stack.push(a - b); break;
        case '*':  stack.push(a * b); break;
        case '/':  stack.push(a / b); break;
        case '^':  stack.push(Math.pow(a, b)); break;
        default: throw new Error('Unknown op');
      }
    }
  }

  if (stack.length !== 1) throw new Error('Invalid expression');
  let res = stack[0];

  // Apply math functions if expression was wrapped (sin(‚Ä¶), etc.)
  if (typeof res === 'number' && !isNaN(res)) {
    return res;
  }
  throw new Error('Evaluation failed');
}

// Main calculate function with history
function calculate() {
  let expression = display.innerText.trim();
  if (!expression || expression === '0') return;

  // Handle scientific functions by wrapping if needed
  if (expression.startsWith('sin(') || expression.startsWith('cos(') ||
      expression.startsWith('tan(') || expression.startsWith('log(') ||
      expression.startsWith('sqrt(')) {
    // already wrapped by button
  } else {
    // basic arithmetic
  }

  const result = safeEvaluate(expression);

  if (result === 'Error') {
    display.innerText = 'Error';
    setTimeout(() => { display.innerText = '0'; }, 1400);
  } else {
    // Add to history
    history.unshift(`${expression} = ${result}`);
    if (history.length > 10) history.pop();

    historyDiv.innerHTML = '<strong>History</strong><br>' +
      history.map(line => `<p>${line}</p>`).join('');

    display.innerText = result;
  }
}

// Keyboard support (basic)
document.addEventListener('keydown', e => {
  e.preventDefault();
  if (/[0-9]/.test(e.key))          appendToDisplay(e.key);
  if (e.key === '.')                appendToDisplay('.');
  if (e.key === '+' || e.key === '-') appendToDisplay(e.key);
  if (e.key === '*')                appendToDisplay('√ó');
  if (e.key === '/')                appendToDisplay('√∑');
  if (e.key === '^')                appendToDisplay('^');
  if (e.key === 'Enter' || e.key === '=') calculate();
  if (e.key === 'Backspace')        deleteLast();
  if (e.key.toLowerCase() === 'c')  clearDisplay();
});
</script>

</body>
</html>
